
@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "UserManagement";
}

<h1>User - Management</h1>

@if (!Model.Any())
{
	<tr>
		<td colspan="3" class="text-center">No User Accounts</td>
	</tr>
}
else
{
	<table class="table table-condensed table-bordered" header header-content="User - Manager">
		<tr>
			<th>User ID</th>
			<th>User name</th>
			<th>Email</th>
			<th>Actions</th>
		</tr>
		@foreach (ApplicationUser user in Model)
		{
		<tr>
			<td>@user.Id</td>
			<td>@user.UserName</td>
			<td>@user.Email</td>
			<td>
				<form asp-action="DeleteUser" asp-route-userId="@user.Id" method="post">
					<a class="btn btn-sm btn-primary" asp-action="EditUser" asp-route-id="@user.Id">Edit</a>
					<button type="submit" onclick="return confirm('Are you want to delete this user');" class="btn btn-sm btn-danger">Delete</button>
				</form>
			</td>
		</tr>
		}
	</table>
		<a class="btn btn-primary" asp-action="addUser">Add new user</a>
}
	